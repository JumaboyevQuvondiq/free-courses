@using OnlineDars.Domain.Entities.Categories;
@model IList<Category>

<div class="row g-10" style="display: flex;justify-content: center">
    <div class="most-popular">
        <div class="col-lg-12">
            <div class="heading-section">
                <h4><em></em>Dasturlash</h4>
            </div>
            <div class="row">
                @{
                    foreach (var category in Model)
                    {
                        <div class="col-lg-3 col-sm-6">
                            <div class="item">
                                <img src="~/@category.ImagePath" alt="">
                                        <a asp-controller="video" asp-action="videos" asp-route-categoryId ="@category.Id" asp-route-Name="@category.CategoryName"><h4>@category.CategoryName (@category.VideosCount)</h4></a>                   
                                <ul class="text-lg-end">
                                    <li><i style="color: gold" class="fa fa-star"></i></li>
                                </ul>
                            </div>
                        </div>
                    }
                 }
            </div>
        </div>
    </div>
</div>